@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Quicksand')

global-reset()

main-color = #191C21
background-color = #2B2F3A
font-color = #fff

body
    font-family 'Georgia'
    background-color background-color
    color #444
    display flex
    flex-direction column
    height 100vh

header
    font-family 'Quicksand'
    padding 50px 10px
    color font-color
    font-size 25px
    text-align center
    width 100%

    background-color main-color
    border-bottom 1px solid darken(main-color, 30%)
    text-shadow 0px -1px 0px darken(main-color, 30%)

.content
    display flex
    text-align center
    flex-grow 1
    flex-direction column
    justify-content center

.content img:hover
    cursor pointer
    animation spin 1s

@keyframes spin
    100%
        transform rotate(360deg)

p
    margin-bottom 20px
    line-height 1.8

footer a
    color font-color

footer
    color font-color
    width 90%
    margin 50px auto
    border-top 1px dotted #ccc
    padding-top 5px
    font-size 40px
    text-align center

footer i
    padding-right 10px
    cursor pointer
